<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgviewbxh"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY" />

    <View
        android:background="@drawable/custom_back_banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imgviewiconbxh"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="90dp"
        android:scaleType="fitXY"
        android:elevation="6dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txttenbxh"
        android:layout_toRightOf="@id/imgviewiconbxh"
        android:textStyle="bold"
        android:textSize="18sp"
        android:maxLines="1"
        android:layout_marginTop="70dp"
        android:layout_marginRight="50dp"
        android:ellipsize="end"
        android:textColor="@color/white"
        android:text="Top bài hát được nghe nhiều nhất tuần "
        />

</RelativeLayout>