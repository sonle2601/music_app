<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    >

    <ImageView
        android:id="@+id/imgSearch"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:scaleType="fitXY" />
    <TextView
        android:id="@+id/txtsearchtenbaihat"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="Ten bai hat"
        android:layout_toRightOf="@id/imgSearch"
        android:layout_marginTop="10dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtsearchtencasi"
        android:textSize="14sp"
        android:textColor="@color/xam"
        android:text="Ten ca si"
        android:layout_toRightOf="@id/imgSearch"
        android:layout_marginTop="6dp"
        android:layout_below="@id/txtsearchtenbaihat"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/imgSearchluotthich"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:src="@drawable/iconlove"
        android:layout_alignParentRight="true"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

</RelativeLayout>