<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.AccountFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/imglogo"
        android:layout_marginTop="30dp"
        android:src="@drawable/logomusic"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" />

    <TextView
        app:layout_constraintRight_toRightOf="@id/imglogo"
        app:layout_constraintLeft_toLeftOf="@id/imglogo"
        app:layout_constraintTop_toBottomOf="@id/imglogo"
        android:id="@+id/txtdangnhap"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imglogo"
        android:text="ĐĂNG NHẬP"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        app:layout_constraintRight_toRightOf="@id/txtdangnhap"
        app:layout_constraintLeft_toLeftOf="@id/txtdangnhap"
        app:layout_constraintTop_toBottomOf="@id/txtdangnhap"
        android:layout_marginTop="20dp"
        android:id="@+id/edtendangnhap"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Tên đăng nhập"
        />

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/edmatkhau"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintRight_toRightOf="@id/edtendangnhap"
        app:layout_constraintLeft_toLeftOf="@id/edtendangnhap"
        app:layout_constraintTop_toBottomOf="@id/edtendangnhap"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Mật khẩu"
        />
    <Button
        android:id="@+id/btnDangnhap"
        android:text="Đăng nhập"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintRight_toRightOf="@id/edmatkhau"
        app:layout_constraintLeft_toLeftOf="@id/edmatkhau"
        app:layout_constraintTop_toBottomOf="@id/edmatkhau"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/txtdangki"
        android:layout_marginTop="20dp"
        android:textColor="@color/xam"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="55dp"
        app:layout_constraintLeft_toLeftOf="@id/btnDangnhap"
        app:layout_constraintTop_toBottomOf="@id/btnDangnhap"
        android:text="Đăng kí"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="20dp"
        android:textColor="@color/xam"
        android:layout_alignParentRight="true"
        android:layout_marginRight="55dp"
        app:layout_constraintRight_toRightOf="@id/btnDangnhap"
        app:layout_constraintTop_toBottomOf="@id/btnDangnhap"
        android:text="Quên mật khẩu"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
